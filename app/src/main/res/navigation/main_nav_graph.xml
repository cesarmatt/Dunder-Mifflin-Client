<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.dundermifflinapp.ui.feed.FeedFragment"
        android:label="FeedFragment"
        tools:layout="@layout/fragment_feed">

        <action
            android:id="@+id/action_feedFragment_to_createMenuFragment"
            app:destination="@id/createMenuFragment" />
    </fragment>

    <fragment
        android:id="@+id/createMenuFragment"
        android:name="com.example.dundermifflinapp.ui.create.CreateMenuFragment"
        android:label="CreateMenuFragment"
        tools:layout="@layout/fragment_create_menu">

        <action
            android:id="@+id/action_createMenuFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
        <action
            android:id="@+id/action_createMenuFragment_to_createCustomerFragment"
            app:destination="@id/createCustomerFragment" />
        <action
            android:id="@+id/action_createMenuFragment_to_createOrderFragment"
            app:destination="@id/createOrderFragment" />
    </fragment>

    <fragment
        android:id="@+id/createOrderFragment"
        android:name="com.example.dundermifflinapp.ui.create.order.CreateOrderFragment"
        android:label="CreateOrderFragment"
        tools:layout="@layout/fragment_create_order">

        <action
            android:id="@+id/action_createOrderFragment_to_createMenuFragment"
            app:destination="@id/createMenuFragment" />
    </fragment>

    <fragment
        android:id="@+id/createCustomerFragment"
        android:name="com.example.dundermifflinapp.ui.create.customer.CreateCustomerFragment"
        android:label="CreateCustomerFragment"
        tools:layout="@layout/fragment_create_customer">

        <action
            android:id="@+id/action_createCustomerFragment_to_createMenuFragment"
            app:destination="@id/createMenuFragment" />
    </fragment>

</navigation>